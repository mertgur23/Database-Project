extends layout

block content
	h3 Multi-dimensional arrays in C?
	div(class="thumbnail" id="questionId" #{})
		div(class="row")
			div(class = "col-md-1")
				a(class="btn btn-default arrow-but" href="#" role="button")
					<span class="glyphicon glyphicon-chevron-up arrow" aria-hidden="true"></span>
				h3(class="score-up point") 
						strong #{rows[0].total_like}
				a(class="btn btn-default arrow-but" href="#" role="button")
					<span class="glyphicon glyphicon-chevron-down arrow" aria-hidden="true"></span>
			div(class = "col-md-11")
				p #{rows[0].text}
				button(class="btn btn-default add-comment" type="submit") Add a comment
				div(class="question-author")
						span(class="glyphicon glyphicon-user" aria-hidden="true")
						h7  #{rows[0].user_name}
			div(class="col-md-4")
				h7 Tags:
				- for(var j = 0; j < tags.length; j++){
					h7  #{tags[j].name}	
				- }
	- for (var i = 0; i < children.length; ++i) {
		if children[i].post_type == 'Q_C'
			div(class="thumbnail")
				div(class="row")
					div(class = "col-md-12")
						p #{children[i].text}
						div(class="question-author")
								span(class="glyphicon glyphicon-user" aria-hidden="true")
								h7  #{children[i].user_name}
	- }
	- for (var i = 0; i < children.length; ++i) {
		if children[i].post_type == 'A'
			div(class="thumbnail")
				div(class="row")
					div(class = "col-md-1")
						a(class="btn btn-default arrow-but" href="#" role="button")
							<span class="glyphicon glyphicon-chevron-up arrow" aria-hidden="true"></span>
						h3(class="score-up point") 
							strong #{children[i].total_like}
						a(class="btn btn-default arrow-but" href="#" role="button")
							<span class="glyphicon glyphicon-chevron-down arrow" aria-hidden="true"></span>
					div(class = "col-md-11")
						p #{children[i].text}
						button(class="btn btn-default add-comment" type="submit") Add a comment
						div(class="question-author")
							span(class="glyphicon glyphicon-user" aria-hidden="true")
							h7  #{children[i].user_name}
	- }
	div(class="thumbnail")
		form
			div(class="form-group")
				label(for="answer") Your Answer
				textarea(class="form-control" rows="3" id="answer")
		button(type="submit" id= "submitAnswer" class="btn btn-success answer-button") Submit
