doctype html
html
	head
		meta(charset = "utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="AskBilkent", content)
		meta(name="Mert Gur")
		title AskBilkent
		link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
		link(href="/stylesheets/style.css" rel="stylesheet")
		script(src="/javascripts/jquery-2.1.3.min.js")
		script(src="/javascripts/jquery.cookie.js")
		script(src="/javascripts/bootstrap.min.js")
		script(src="/javascripts/script.js")
	body
		div(class="container")
			nav(class="navbar navbar-inverse navbar-fixed-top")
				div(class="container-fluid")
					div(class="navbar-header")
						button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
							span(class="sr-only") Toogle navigation
						a(class="navbar-brand" href="/") Ask Bilkent
					div(id="navbar" class="navbar-collapse collapse")
						ul(class="nav navbar-nav")
							li(class="active")
								a(href="/") Home
							
						form(class="navbar-form navbar-left" role="search")
							input(type="text" class="form-control" placeholder="Search")
						if !login
							ul(class="nav navbar-nav navbar-right")
								li
									a(href="/login" id="loginPage") Login
							ul(class="nav navbar-nav navbar-right")
								li
									a(href="/register" id="registerPage") Register
						else
							ul(class="nav navbar-nav navbar-right")
									li
										a(href="/logout") Logout
							ul(class="nav navbar-nav navbar-right")
								li
									a(href="/profile" id="profilePage") #{login}
							ul(class="nav navbar-nav navbar-left")
								li
									a(href="/ask") Ask Question
							

			block content
